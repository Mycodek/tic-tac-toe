name: Deploy to GitHub Pages

on:
  push:
    branches: [main]  # Trigger on changes to the main branch
  workflow_dispatch:  # Allow manual triggering

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16'  # Specify the Node.js version

      - name: Install Dependencies
        run: npm install

      - name: Build Project
        run: npm run build  # Builds your project, e.g., React build

      - name: Deploy to GitHub Pages
        uses: JamesIves/github-pages-deploy-action@4.3.1
        with:
          branch: gh-pages  # The GitHub Pages branch
          folder: build     # The folder to deploy
          clean: true       # Optional: Cleans old files from deployment branch
